<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FrequestsActivity"
    android:background="#fff">



        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarId"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/toolbarstyle" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:drawablePadding="@dimen/ten_Dimen"
        android:paddingStart="@dimen/ten_Dimen"
        android:paddingEnd="@dimen/zero_Dimen"
        android:text="@string/app_name"
        android:textColor="#000"
        android:textSize="@dimen/thirty_five_SP_Dimen"
        app:drawableStartCompat="@drawable/user_icon" />




            <!-- TODO: Update blank fragment layout -->



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="?actionBarSize">

                <TextView
                    android:id="@+id/pendingFollReq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten_Dimen"
                    android:layout_marginTop="@dimen/five_Dimen"
                    android:layout_marginEnd="@dimen/ten_Dimen"
                    android:layout_marginBottom="@dimen/five_Dimen"
                    android:background="#8FED09"
                    android:drawablePadding="@dimen/ten_Dimen"
                    android:paddingStart="@dimen/twenty_Dimen"
                    android:paddingTop="@dimen/three_Dimen"
                    android:paddingEnd="@dimen/zero_Dimen"
                    android:paddingBottom="@dimen/three_Dimen"
                    android:text="@string/pendingfollowreq"
                    android:textSize="@dimen/twenty_SP_Dimen"
                    app:drawableStartCompat="@drawable/ic_friendreq" />



                <TextView
                    android:id="@+id/findnewYaar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/ten_Dimen"
                    android:layout_marginEnd="@dimen/ten_Dimen"
                    android:layout_marginStart="@dimen/ten_Dimen"
                    android:layout_marginBottom="@dimen/five_Dimen"
                    android:background="#7196F1"
                    android:drawablePadding="@dimen/ten_Dimen"
                    android:paddingStart="@dimen/twenty_Dimen"
                    android:paddingEnd="@dimen/zero_Dimen"
                    android:text="@string/findNewyaar"
                    android:textSize="@dimen/twenty_SP_Dimen"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/noPendingFollReq"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sixty_Dimen"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/five_Dimen"
                    android:layout_marginTop="@dimen/one_hundred_thirty_five_Dimen"
                    android:layout_marginEnd="@dimen/twenty_Dimen"
                    android:background="#A1CAB1B1"
                    android:paddingStart="@dimen/fifty_Dimen"
                    android:paddingTop="@dimen/three_Dimen"
                    android:paddingEnd="@dimen/fifty_Dimen"
                    android:paddingBottom="@dimen/three_Dimen"
                    android:text="@string/nofollowreq"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="22dp" />

                <ImageView
                    android:id="@+id/new_yaar_Image_id"
                    android:layout_width="@dimen/three_hundred_Dimen"
                    android:layout_height="@dimen/two_hundred_fifteen_Dimen"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/fifty_Dimen"
                    android:layout_marginTop="@dimen/two_hundred_Dimen"
                    android:layout_marginEnd="@dimen/twenty_Dimen"
                    android:paddingStart="@dimen/eight_Dimen"
                    android:paddingEnd="@dimen/eight_Dimen"
                    android:background="@drawable/aboutshowbody"
                    android:src="@drawable/find_new_friend_final"

                    />

                <Button
                    android:id="@+id/btn_new_yaar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="@dimen/twenty_Dimen"
                    android:layout_marginBottom="@dimen/seventeen_Dimen"
                    android:background="@drawable/rounded_btn_main"
                    android:drawablePadding="@dimen/ten_Dimen"
                    android:drawableTint="@color/white"
                    android:paddingStart="@dimen/twenty_Dimen"
                    android:paddingTop="@dimen/three_Dimen"
                    android:paddingEnd="@dimen/twenty_Dimen"
                    android:paddingBottom="@dimen/three_Dimen"
                    android:text="@string/click_for_find_new_yaar_txt"
                    android:textColor="@color/cardview_white"
                    app:drawableStartCompat="@drawable/ic_friendreq" />

                <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/user_recycleerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/ten_Dimen"
                    android:layout_marginTop="@dimen/thirty_five_Dimen"
                android:visibility="gone"/>




            </RelativeLayout>



</RelativeLayout>