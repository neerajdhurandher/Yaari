<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FrequestsActivity"
    android:background="#fff">



        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarId"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/toolbarstyle" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:drawablePadding="@dimen/ten_Dimen"
        android:paddingStart="@dimen/ten_Dimen"
        android:paddingEnd="@dimen/zero_Dimen"
        android:text="@string/app_name"
        android:textColor="#000"
        android:textSize="@dimen/thirty_five_SP_Dimen"
        app:drawableStartCompat="@drawable/user_icon" />




            <!-- TODO: Update blank fragment layout -->



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="?actionBarSize">

                <TextView
                    android:id="@+id/pendingFollReq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_Dimen"
                    android:layout_marginBottom="@dimen/five_Dimen"
                    android:layout_marginStart="@dimen/ten_Dimen"
                    android:layout_marginEnd="@dimen/ten_Dimen"
                    android:paddingStart="@dimen/twenty_Dimen"
                    android:paddingEnd="@dimen/zero_Dimen"
                    android:paddingTop="@dimen/three_Dimen"
                    android:paddingBottom="@dimen/three_Dimen"
                    android:text="@string/pendingfollowreq"
                   android:drawablePadding="@dimen/ten_Dimen"
                    android:textSize="@dimen/twenty_SP_Dimen"
                    android:background="#8FED09"
                    app:drawableStartCompat="@drawable/ic_friendreq" />


                <RelativeLayout
                    android:id="@+id/searchLayout"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:layout_marginTop="@dimen/forty_five_Dimen"
                    >

                    <EditText
                        android:id="@+id/search_user_box_id"
                        android:layout_width="@dimen/three_hundred_Dimen"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/ten_Dimen"
                        android:layout_marginTop="@dimen/five_Dimen"
                        android:layout_marginBottom="@dimen/five_Dimen"
                        android:background="@drawable/searchboxlayout"
                        android:hint="@string/searchboxtxt"
                        android:paddingStart="@dimen/twenty_Dimen"
                        android:paddingTop="@dimen/three_Dimen"
                        android:paddingEnd="@dimen/ten_Dimen"
                        android:paddingBottom="@dimen/three_Dimen"
                        android:maxLines="1"/>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/floatingsearchbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="@dimen/ten_Dimen"
                        android:layout_marginTop="@dimen/three_Dimen"
                        android:layout_marginBottom="@dimen/three_Dimen"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/floating_search_icon"
                        app:backgroundTint="@color/black"
                        app:rippleColor="@color/red"
                        />
                </RelativeLayout>


                <TextView
                    android:id="@+id/findnewYaar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/ten_Dimen"
                    android:layout_marginEnd="@dimen/ten_Dimen"
                    android:layout_marginStart="@dimen/ten_Dimen"
                    android:layout_marginBottom="@dimen/five_Dimen"
                    android:background="#7196F1"
                    android:drawablePadding="@dimen/ten_Dimen"
                    android:paddingStart="@dimen/twenty_Dimen"
                    android:paddingEnd="@dimen/zero_Dimen"
                    android:text="@string/findNewyaar"
                    android:textSize="@dimen/twenty_SP_Dimen"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/noPendingFollReq"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fifty_Dimen"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/five_Dimen"
                    android:layout_marginTop="@dimen/one_hundred_thirty_five_Dimen"
                    android:layout_marginEnd="@dimen/twenty_Dimen"
                    android:background="@color/colorAccent"
                    android:paddingStart="@dimen/twenty_Dimen"
                    android:paddingTop="@dimen/three_Dimen"
                    android:paddingEnd="@dimen/ten_Dimen"
                    android:paddingBottom="@dimen/three_Dimen"
                    android:text="@string/nofollowreq"
                    android:textColor="@color/cardview_white"
                    android:textSize="@dimen/twenty_SP_Dimen" />

                <ImageView
                    android:id="@+id/new_yaar_Image_id"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/two_hundred_Dimen"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/twenty_Dimen"
                    android:layout_marginTop="@dimen/two_hundred_Dimen"
                    android:layout_marginEnd="@dimen/twenty_Dimen"
                    android:background="@color/red"/>

                <Button
                    android:id="@+id/btn_new_yaar"
                    android:layout_width="@dimen/one_hundred_five_Dimen"
                    android:layout_height="@dimen/seventy_Dimen"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="@dimen/eighty_Dimen"
                    android:layout_marginBottom="@dimen/two_hundred_Dimen"
                    android:background="@color/cardview_white"
                    android:text="@string/click_for_find_new_yaar_txt"
                    android:textColor="@color/colorPrimaryDark" />

                <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/user_recycleerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/ten_Dimen"
                android:visibility="gone"/>




            </RelativeLayout>



</RelativeLayout>