<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/two_Dimen"
    app:cardElevation="@dimen/two_Dimen"
    app:cardBackgroundColor="@color/cardview_white"
    app:contentPadding="@dimen/three_Dimen"
    >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <com.blogspot.atifsoftwares.circularimageview.CircularImageView
            android:id="@+id/useriamgeS"
            android:layout_width="@dimen/seventy_Dimen"
            android:layout_height="@dimen/seventy_Dimen"
            android:src="@drawable/user_icon"/>

       <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/ten_Dimen"
            android:orientation="vertical"
            >
           <TextView
               android:id="@+id/usernameS"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/five_Dimen"
               android:text="@string/name"
               android:textColor="#000"
               android:textSize="@dimen/twenty_SP_Dimen"
            />

            <TextView
                android:id="@+id/useremailS"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five_Dimen"
                android:text="@string/email"
             android:textColor="#000"

                />

        </LinearLayout>


        <TextView
            android:id="@+id/following_state"
            android:layout_width="77dp"
            android:layout_height="@dimen/forty_Dimen"
            android:layout_marginTop="@dimen/fifteen_Dimen"
            android:layout_marginStart="@dimen/ten_Dimen"
            android:layout_marginEnd="@dimen/five_Dimen"
            android:layout_marginBottom="@dimen/fifteen_Dimen"
            android:gravity="center"
            android:paddingStart="@dimen/three_Dimen"
            android:paddingEnd="@dimen/three_Dimen"
            android:text="@string/following_txt"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sixteen_SP_Dimen" />


    </LinearLayout>

    </androidx.cardview.widget.CardView>