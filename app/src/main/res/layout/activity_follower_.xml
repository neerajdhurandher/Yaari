<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Follower_Activity"
    android:background="#fff">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarId"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/toolbarstyle" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <!-- TODO: Update blank fragment layout -->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:orientation="horizontal">

            <com.blogspot.atifsoftwares.circularimageview.CircularImageView
                android:id="@+id/useriamgeS"
                android:layout_width="@dimen/forty_Dimen"
                android:layout_height="@dimen/forty_Dimen"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/twenty_five_Dimen"
                android:layout_marginTop="@dimen/five_Dimen"
                android:layout_marginBottom="@dimen/nine_Dimen"
                android:src="@drawable/user_icon" />

            <TextView
                android:id="@+id/usernameTop"
                android:layout_width="wrap_content"
                android:layout_height="?actionBarSize"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/eighty_Dimen"
                android:layout_marginBottom="@dimen/zero_Dimen"
                android:paddingStart="@dimen/ten_Dimen"
                android:paddingTop="@dimen/five_Dimen"
                android:paddingEnd="@dimen/ten_Dimen"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="@dimen/twenty_five_SP_Dimen" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingsearchbtnTop"
                android:layout_width="wrap_content"
                android:layout_height="?actionBarSize"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/eight_Dimen"
                android:layout_marginBottom="@dimen/two_Dimen"
                android:layout_marginTop="@dimen/two_Dimen"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/floating_search_icon"
                app:backgroundTint="@color/cardview_white"
                app:rippleColor="@color/colorAccent" />

        </RelativeLayout>





            <RelativeLayout
                android:id="@+id/searchLayout"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_marginTop="@dimen/five_Dimen"
                android:layout_marginBottom="@dimen/zero_Dimen"
                >

                <EditText
                    android:id="@+id/search_user_box_id"
                    android:layout_width="@dimen/three_hundred_Dimen"
                    android:layout_height="@dimen/forty_Dimen"
                    android:layout_marginStart="@dimen/ten_Dimen"
                    android:layout_marginTop="@dimen/five_Dimen"
                    android:layout_marginBottom="@dimen/three_Dimen"
                    android:background="@drawable/searchboxlayout"
                    android:hint="@string/searchboxtxt"
                    android:maxLines="1"
                    android:paddingStart="@dimen/twenty_Dimen"
                    android:paddingTop="@dimen/five_Dimen"
                    android:paddingEnd="@dimen/ten_Dimen"
                    android:paddingBottom="@dimen/five_Dimen" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/floatingsearchbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="?actionBarSize"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/eight_Dimen"
                    android:layout_marginBottom="@dimen/two_Dimen"
                    android:layout_marginTop="@dimen/two_Dimen"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/floating_search_icon"
                    app:backgroundTint="@color/cardview_white"
                    app:rippleColor="@color/red"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/followerId"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty_Dimen"
                android:text="@string/followerstxt"
                android:paddingBottom="5dp"
                android:paddingTop="8dp"
                android:paddingStart="@dimen/thirty_Dimen"
                android:paddingEnd="@dimen/thirty_Dimen"
                android:textSize="@dimen/twenty_five_SP_Dimen"
                android:background="@color/colorPrimary"
                android:textAlignment="center"
                android:textColor="@color/white"

                />

            <TextView
                android:id="@+id/nofollowerId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nofollower"
                android:padding="@dimen/ten_Dimen"
                android:textSize="@dimen/twenty_SP_Dimen"
                android:textColor="@color/white"
                android:background="@color/red"
                android:layout_marginTop="@dimen/five_Dimen"
                android:layout_marginBottom="@dimen/five_Dimen"
                android:textAlignment="center"

                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/user_recycleerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/ten_Dimen" />


        </LinearLayout>

    </RelativeLayout>

